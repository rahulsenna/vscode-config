{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
      {
        "type": "cppbuild",
        "label": "C/C++: GCC Build and Run",
        "command": "gcc",
        "args": ["-fdiagnostics-color=always", "-g",  "${file}","-o", "${fileDirname}/${fileBasenameNoExtension}.exe",
          "&&", "${fileDirname}/${fileBasenameNoExtension}.exe"
        ],
        "options": {
          "cwd": "/usr/bin"
        },
        "problemMatcher": [
          "$gcc"
        ],
        "presentation": {
          "reveal": "silent"
        },
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "detail": "Task generated by Debugger.",
        "icon": {"color": "terminal.ansiBlack", "id": "array"}
      },

      {
        "type": "cppbuild",
        "label": "C/C++: Clang Build and Run",
        "command": "clang",
        "args": ["-fdiagnostics-color=always", "-g",  "${file}","-o", "${fileDirname}/${fileBasenameNoExtension}.exe",
          "&&", "${fileDirname}/${fileBasenameNoExtension}.exe"
        ],
        "options": {
          "cwd": "/usr/bin"
        },
        "problemMatcher": [
       
          { 
            // Cland errors
            "owner": "cpp",
            "fileLocation": "absolute",
            "pattern": {
              "regexp": "(..[^:]*):([0-9]+):?([0-9]+)?:?: (warning|error):(.*)$",
              "file": 1,
              "line": 2,
              "column": 3,
              "severity": 4,
              "message": 5
            }
          }
          
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "detail": "Task generated by Debugger."
      }
    ]
}