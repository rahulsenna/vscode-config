{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
      {
        "type": "cppbuild",
        "label": "C/C++: Build and Run:GCC",
        "command": "gcc",
        "args": ["-fdiagnostics-color=always", "-g",  "${file}","-o", "${workspaceFolder}/bin/${fileBasenameNoExtension}",
          "&&", "${workspaceFolder}/bin/${fileBasenameNoExtension}"
        ],
        "options": {
          "cwd": "${workspaceFolder}/bin"
        },
        "problemMatcher": [
          "$gcc"
        ],

        "group": {
          "kind": "build",
          // "isDefault": true
        },
        "detail": "Task generated by Debugger.",
        "icon": {"color": "terminal.ansiBlack", "id": "array"},

        "presentation": {
          "echo": true,
          "reveal": "silent",
          "focus": true,
          "panel": "shared",
          "showReuseMessage": false,
          "clear": true,
      }

      },

      {
        "type": "cppbuild",
        "label": "C/C++: Build and Run:Clang",
        "command": "clang",
        "args": ["-fdiagnostics-color=always", "-g",  "${file}","-o", "${workspaceFolder}/bin/${fileBasenameNoExtension}",
          "&&", "${workspaceFolder}/bin/${fileBasenameNoExtension}"
        ],
        "options": {
          "cwd": "${workspaceFolder}/bin"
        },
        "problemMatcher": [
       
          { 
            // clang error capturer
            "owner": "cpp",
            "fileLocation": "absolute",
            "pattern": {
              "regexp": "(..[^:]*):([0-9]+):?([0-9]+)?:?: (warning|error):(.*)$",
              "file": 1,
              "line": 2,
              "column": 3,
              "severity": 4,
              "message": 5
            }
          }
          
        ],
        "group": {
          "kind": "build",
          // "isDefault": false
        },
        "detail": "Task generated by Debugger.",
        "presentation": {
          "echo": true,
          "reveal": "silent",
          "focus": true,
          "panel": "shared",
          "showReuseMessage": false,
          "clear": true,
        }
      },

      // TypeScript transpile
      {
        "type": "shell",
        "label": "TypeScript: transpile",
        "command": "tsc",
        "args": ["${file}", "--outFile", "${fileBasenameNoExtension}.js"],
        "problemMatcher": [
          "$tsc","$tsc-watch"
        ],
      },
      // TypeScript
      {
        "type": "shell",
        "label": "TypeScript",
        "command": "node ${fileBasenameNoExtension}.js",
        "problemMatcher": [
          "$tsc","$tsc-watch","$node-sass"
        ],

      
        "presentation": {
          "echo": true,
          "reveal": "always",
          "focus": true,
          "panel": "shared",
          "showReuseMessage": false,
          "clear": true,
        }, 
        "dependsOn": [
          "TypeScript: transpile"
        ]
      },

      // Javascript
      {
        "type": "shell",
        "label": "JavaScript",
        "command": "node ${file}",
        "problemMatcher": [
          "$tsc","$tsc-watch","$node-sass"
        ],
        "presentation": {
          "echo": true,
          "reveal": "always",
          "focus": true,
          "panel": "shared",
          "showReuseMessage": false,
          "clear": true,
        },
      },
    ]
}